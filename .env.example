# ==========================================
# Configuration Discord (REQUIS)
# ==========================================
# Token du bot Discord - À obtenir sur https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# ID client du bot Discord
DISCORD_CLIENT_ID=your_discord_client_id_here

# ID de la guilde (serveur Discord) où le bot sera utilisé
DISCORD_GUILD_ID=your_discord_guild_id_here

# ==========================================
# Configuration Twilio (OPTIONNEL)
# ==========================================
# SID du compte Twilio - À obtenir sur https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here

# Token d'authentification Twilio
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Numéro de téléphone Twilio expéditeur (format: +33612345678)
TWILIO_PHONE_NUMBER=+33612345678

# Région Twilio (défaut: ie1)
# Options: ie1, us1, sg1, au1, etc.
TWILIO_REGION=ie1

# Numéros de téléphone pour notifications d'ouverture de portail
# Format: +33612345678
# Vous pouvez définir plusieurs numéros avec les variables suivantes:
GATE_PHONE_NUMBER=+33612345678
GATE_PHONE_NUMBER_1=+33612345679
GATE_PHONE_NUMBER_2=+33612345680

# ==========================================
# Configuration Planning
# ==========================================
# Nom de la catégorie Discord pour les canaux de planning
PLANNING_CATEGORY=Planning

# Nombre de jours à créer à l'avance (défaut: 7)
PLANNING_DAYS_AHEAD=7

# Expression cron pour la maintenance automatique du planning
# Format: minute heure jour mois jour-semaine
# Exemple: '*/1 11-20 * * *' = chaque minute entre 11h et 20h
PLANNING_CRON=*/1 11-20 * * *

# Décalage horaire en heures pour le calcul des dates (défaut: 1)
TIME_OFFSET_HOURS=1

# ==========================================
# Configuration Règles
# ==========================================
# Nom du rôle Discord à attribuer lors de l'acceptation des règles
MEMBER_ROLE_NAME=Membre

# Fichier de log des signatures de règles (défaut: signatures_log.txt)
RULES_LOG_FILE=signatures_log.txt

# ==========================================
# Configuration Statut Gym
# ==========================================
# URL de l'image à afficher quand la salle est ouverte
GYM_STATUS_OPEN_IMAGE=https://cdn.discordapp.com/attachments/1254003995454996522/1278085289893695559/open.png

# URL de l'image à afficher quand la salle est fermée
GYM_STATUS_CLOSED_IMAGE=https://cdn.discordapp.com/attachments/1254003995454996522/1278085289054572575/close.png

# ==========================================
# Configuration Générale
# ==========================================
# Timezone de l'application (défaut: Europe/Paris)
# Format IANA: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
APP_TIMEZONE=Europe/Paris

# Environnement d'exécution (development, production)
NODE_ENV=development